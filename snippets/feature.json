{
    "Funcionalidade": {
        "prefix": "Funcionalidade",
        "body": [
            "Funcionalidade: ${1:title}",
            "Como ${3:type of user}",
            "Quero ${4:goal}",
            "Para ${5:reason}",
            " "
        ],
        "description": "Adicionar uma nova Funcionalidade",
        "scope": "text.gherkin.syntax"
    },
    "cenario": {
        "prefix": "cenário",
        "body": [
            "Cenário: ${1:title}",
            " Dado ${2:precondition}",
            "  Queo ${3:action}",
            "  Então ${4:testable outcome}",
            " "
        ],
        "description": "Adicioneo um novo \"Cenário\" ",
        "scope": "text.gherkin.syntax"
    },
    "esquema do cenario": {
        "prefix": "esquema de cenário",
        "body": [
            "Esquema de Cenário: ${1:title}",
            " Dado ${2:precondition}",
            "  Queo ${3:action}",
            "  Então ${4:testable outcome}",
            " Exemplos: ",
            " |  ${5:title}  | ",
            " | ${6:value 1} | ",
            " | ${7:value 2} | ",
            " "
        ],
        "description": "Adicioneo um novo \"Esquema de Cenário\" ",
        "scope": "text.gherkin.syntax"
    },
    "dado": {
        "prefix": "dado",
        "body": " Dado ${1:precondition}",
        "description": "Adicioneo um novo passo \"Dado\"",
        "scope": "text.gherkin.syntax"
    },
    "então": {
        "prefix": "então",
        "body": "  Então ${1:testable outcome}",
        "description": "Adicioneo um novo passo \"Queo\"",
        "scope": "text.gherkin.syntax"
    },
    "queo": {
        "prefix": "queo",
        "body": "  Queo ${1:action}",
        "description": "Adicioneo um novo passo\"Queo\"",
        "scope": "text.gherkin.syntax"
    },
    "e": {
        "prefix": "e",
        "body": "   And ${1:addition}",
        "description": "Adicioneo um novo passo \"And\"",
        "scope": "text.gherkin.syntax"
    },
    "mas": {
        "prefix": "mas",
        "body": "   But ${1:addition}",
        "description": "Adicioneo um novo passo \"But\"",
        "scope": "text.gherkin.syntax"
    },
 
    "RN": {
        "prefix": "RNG",
        "body":  [  
           "${TM_regras.feature/(Mantem|Solicita)/${1:/downcase}${2:/capitalize}/g}"
        ]
    }
}